{
    "name": "python-practice",
    // Python 3.12 がプリインストールされたイメージをそのまま使います
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",

    "features": {
        // uv をインストールするためのFeatureを追加します
        "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {}
    },
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                // ベースイメージのPythonパスを指定します
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "editor.formatOnSave": true
            }
        }
    },

    // uvで仮想環境を作成し、ライブラリをインストールします
    "postCreateCommand": "sudo chown -R vscode:vscode . && uv venv && uv sync --dev",
    "remoteUser": "vscode"
}